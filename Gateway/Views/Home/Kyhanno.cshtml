    <script src="https://cdn.datatables.net/buttons/1.5.6/js/buttons.print.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#denthang").val(@DateTime.Now.Month).selectpicker('refresh');
            $(".divngay").css("display", "none");
            $('.amenu6').addClass('active');
            $('.form-control1').datepicker({
                format: 'dd/mm/yyyy',
                todayHighlight: true,
                autoclose: true,
            })
            $("#chon").change(function () {
                //$("#PartialView").empty();
                if ($("#chon").val() == 1) {
                    $('#chinhanh').selectpicker('destroy');
                    $('#chinhanh').removeClass('show-tick');
                    $('#chinhanh').removeAttr("multiple");
                }
                else {
                    $('#chinhanh').selectpicker('destroy');
                    $('#chinhanh').addClass('show-tick');
                    $('#chinhanh').attr("multiple", "true");
                    $('#chinhanh .bs-title-option').remove();
                }
                $('#chinhanh').selectpicker();
                $('#chinhanh').selectpicker('deselectAll');
            });
            //$("#chon").change(function () {
            //    if ($("#chon").val() == 1) {
            //        $(".divthang").css("display", "block");
            //        $(".divngay").css("display", "none");
            //    }
            //    else {
            //        $(".divthang").css("display", "none");
            //        $(".divngay").css("display", "block");
            //    }
            //});
            $("#chinhanh").change(function () {
                if ($("#chinhanh").val() != "") {
                    $('#loading').modal({ backdrop: 'static', keyboard: false });
                    $.ajax({
                        type: "POST",
                        url: "@Url.Action("GetPartialKyhan", "Home")",
                        datatype: 'json',
                    contentType: "application/json",
                    data: '{macn: ' + JSON.stringify($("#chinhanh").val()) + '}',
                    error: function () {
                        $('#loading').modal('hide');
                    },
                    success: function (data) {
                        $("#PartialView").html(data);
                        $('#PartialView .selectpicker').selectpicker();
                        $('#loading').modal('hide');
                    },
                    error: function (request, status, error) {
                        toastr.options = {
                            "closeButton": false,
                            "debug": false,
                            "newestOnTop": true,
                            "progressBar": true,
                            "positionClass": "toast-top-right",
                            "preventDuplicates": false,
                            "onclick": null,
                            "showDuration": "300",
                            "hideDuration": "1000",
                            "timeOut": "5000",
                            "extendedTimeOut": "1000",
                            "showEasing": "swing",
                            "hideEasing": "linear",
                            "showMethod": "fadeIn",
                            "hideMethod": "fadeOut"
                        }
                        Command: toastr["warning"]("Không thành công ,Vui lòng thử lại !", "Thông báo")
                        $('#loading').modal('hide');
                    },
                    timeout: 5000,
                    });
            }
            });
            $("#makh").change(function () {
                $("#tenkh").val($('option:selected', "#makh").attr("data-tenkh"));
            });
            $(".btnin,.btnindoichieu").click(function (e) {
                if ($("#chinhanh").val() == "") {
                    toastr.options = {
                        "closeButton": false,
                        "debug": false,
                        "newestOnTop": true,
                        "progressBar": true,
                        "positionClass": "toast-top-right",
                        "preventDuplicates": false,
                        "onclick": null,
                        "showDuration": "300",
                        "hideDuration": "1000",
                        "timeOut": "5000",
                        "extendedTimeOut": "1000",
                        "showEasing": "swing",
                        "hideEasing": "linear",
                        "showMethod": "fadeIn",
                        "hideMethod": "fadeOut"
                    }
                    Command: toastr["warning"]("Vui lòng chọn chi nhánh !", "Thông báo")
                    e.preventDefault();
                }
                else if ($("#thang").val() == "" || $("#nam").val() == "") {
                    toastr.options = {
                        "closeButton": false,
                        "debug": false,
                        "newestOnTop": true,
                        "progressBar": true,
                        "positionClass": "toast-top-right",
                        "preventDuplicates": false,
                        "onclick": null,
                        "showDuration": "300",
                        "hideDuration": "1000",
                        "timeOut": "5000",
                        "extendedTimeOut": "1000",
                        "showEasing": "swing",
                        "hideEasing": "linear",
                        "showMethod": "fadeIn",
                        "hideMethod": "fadeOut"
                    }
                    Command: toastr["warning"]("Vui lòng chọn tháng - năm !", "Thông báo")
                    e.preventDefault();
                }
                else if ($("#matk").val() == "") {
                    toastr.options = {
                        "closeButton": false,
                        "debug": false,
                        "newestOnTop": true,
                        "progressBar": true,
                        "positionClass": "toast-top-right",
                        "preventDuplicates": false,
                        "onclick": null,
                        "showDuration": "300",
                        "hideDuration": "1000",
                        "timeOut": "5000",
                        "extendedTimeOut": "1000",
                        "showEasing": "swing",
                        "hideEasing": "linear",
                        "showMethod": "fadeIn",
                        "hideMethod": "fadeOut"
                    }
                    Command: toastr["warning"]("Vui lòng chọn tài khoản !", "Thông báo")
                    e.preventDefault();
                }
            });

        });
    </script>
