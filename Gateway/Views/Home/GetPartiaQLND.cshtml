@model ApplicationChart.Models.Dulieutimkiem

<div class="form-group col-md-6 col-lg-4 mb-0">
    <label class="my-1 mr-2 font-weight-bold" for="khuvuc">Khu vực</label>
    <select title="Chọn khu vực" class="selectpicker show-tick my-1 mr-sm-2" multiple data-actions-box="true" data-selected-text-format="count > 3" id="khuvuc">
        <option selected value="ALL">Tất cả</option>
         @foreach (var i in Model.KHUVUC)
        {
            <option value="@i.matinh">@i.matinh - @i.tentinh</option>
        }
    </select>
</div>


<div class="form-group col-md-6 col-lg-4 mb-0">
    <label class="my-1 mr-2 font-weight-bold" for="loaihd">Mã TDV</label>
    <select title="Chọn TDV" class="selectpicker show-tick my-1 mr-sm-2" multiple data-actions-box="true" data-selected-text-format="count > 3" data-live-search="true" id="matdv">
        <option selected value="ALL">Tất cả</option>
         @foreach (var i in Model.TDV)
        {
            <option value="@i.MATDV">@i.MATDV - @i.TENTDV</option>
        }
    </select>
</div>


<div class="form-group col-md-6 col-lg-4 col-sm-6 mb-0">
    <label class="my-1 mr-2 font-weight-bold" for="ploaict">Mã Quận/Huyện</label>
    <select title="Chọn" class="selectpicker my-1 mr-sm-2 show-tick" id="maquan">
        <option selected value="ALL">Tất cả</option>
        @foreach (var i in Model.QUANHUYEN)
        {
            <option value="@i.maquan">@i.maquan - @i.tenquan</option>
        }
    </select>
</div>

