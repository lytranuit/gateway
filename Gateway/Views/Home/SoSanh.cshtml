<div id="heightscreen">
    <div class="w3-card w3-white" style="border-radius:0.25rem">
        <ol class="breadcrumb" style="margin-top:45px;margin-bottom:2px;">
            <li class="breadcrumb-item"><a style="color:#007bff;font-weight:700" href="#">@Html.Raw(GlobalRes.lbbieudo.ToUpper())</a></li>
            <li class="breadcrumb-item active w3-text-black">@Html.Raw(GlobalRes.lbsosanhtheonam.ToUpper())</li>
        </ol>
    </div>
    <div class="w3-container box" style="text-align:center; margin-top:0px;margin-bottom:2px;background-color:white;">
        <div id="content"></div>
        <div class="w3-col l2 m6 s6 w3-padding pl-md-0 pl-lg-4">

            <button type="button" id="submit" class="btn btn-success abc btnmain transition-3d-hover m-0"><i style="padding-right:10px;" class="fa fa-search" aria-hidden="true"></i> @Html.Raw(GlobalRes.lbtimkiem.ToUpper())</button>
        </div>
        <div class="w3-col l2 m6 s6 w3-padding paddingright">

            <button id="btnin" type="button" class="btn btn-danger abc btnmain transition-3d-hover m-0"><i style="padding-right:10px;" class="fa fa-print" aria-hidden="true"></i> @Html.Raw(GlobalRes.lbin.ToUpper())</button>
        </div>
    </div>
