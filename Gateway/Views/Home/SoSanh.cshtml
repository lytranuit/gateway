        <div class="row p-2">
            <div class="form-group col-md-3 col-sm-6 mb-1 pr-1 pl-1">
                <label class="my-1 mr-2 font-weight-bold" for="chon">@Html.Raw(GlobalRes.lbbieudo.ToUpper())<code>(*)</code></label>
                <select class="selectpicker my-1 mr-sm-2 show-tick" id="chon">
                    <option selected value="0">@Html.Raw(GlobalRes.lbmotchinhanh)</option>
                    <option value="1">@Html.Raw(GlobalRes.lbnhieuchinhanh)</option>
                </select>
            </div>
            <div class="form-group col-md-3 col-sm-6 mb-1 pr-1 pl-1">
                <label class="my-1 mr-2 font-weight-bold" for="chinhanh">@Html.Raw(GlobalRes.lbchinhanh)<code>(*)</code></label>
                <select class="selectpicker my-1 mr-sm-2" data-dropdown-align-right="true" title="@Html.Raw(GlobalRes.lbchonchinhanh)" data-actions-box="true" data-selected-text-format="count > 3" id="Checkboxlist1">
                    @foreach (var k in ViewBag.donvi)
                    {
                        <option value=@k.macn>@k.Tencn</option>
                    }
                </select>
            </div>
            <div class="form-group col-md-2 col-sm-6 mb-1 pr-1 pl-1">
                <label class="my-1 mr-2 font-weight-bold" for="loaibaocao">@Html.Raw(GlobalRes.lbtuthang)</label>
                <select class="selectpicker show-tick my-1 mr-sm-2" id="tuthang">
                    <option selected value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                    <option value="9">9</option>
                    <option value="10">10</option>
                    <option value="11">11</option>
                    <option value="12">12</option>
                </select>
            </div>
            <div class="form-group col-md-2 col-sm-6 mb-1 pr-1 pl-1">
                <label class="my-1 mr-2 font-weight-bold" for="loaibaocao">@Html.Raw(GlobalRes.lbdenthang)</label>
                <select class="selectpicker show-tick my-1 mr-sm-2" id="denthang">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                    <option value="9">9</option>
                    <option value="10">10</option>
                    <option value="11">11</option>
                    <option value="12">12</option>
                </select>
            </div>
            <div class="form-group col-md-2 col-sm-12 mb-1 pr-1 pl-1">
                <label class="my-1 mr-2 font-weight-bold" for="loaibaocao">@Html.Raw(GlobalRes.lbsosanhnam)</label>
                <select class="selectpicker show-tick my-1 mr-sm-2" id="nam">
                    <option value="@DateTime.Now.Year">@DateTime.Now.Year - @(DateTime.Now.Year - 1)</option>
                    <option value="@(DateTime.Now.Year-1)">@(DateTime.Now.Year - 1) - @(DateTime.Now.Year - 2)</option>
                    @*<option value="@(DateTime.Now.Year-2)">@(DateTime.Now.Year - 2) - @(DateTime.Now.Year - 3)</option>
                    <option value="@(DateTime.Now.Year-3)">@(DateTime.Now.Year - 3) - @(DateTime.Now.Year - 4)</option>*@
                </select>
            </div>
            <div class="form-group col-md-3 col-sm-6 mb-1 pr-1 pl-1">
                <label class="my-1 mr-2 font-weight-bold" for="Checkboxlist2">@Html.Raw(GlobalRes.lbphanloaikhachhang)</label>
                <select class="selectpicker show-tick my-1 mr-sm-2" id="Checkboxlist2">
                    <option value="null" checked>@Html.Raw(GlobalRes.lbtatca)</option>
                    <option data-subtext="Khối khách hàng ETC" value="ETC">ETC</option>
                    <option data-subtext="Khối khách OTC" value="OTC">OTC</option>
                </select>
            </div>
            <div class="form-group col-md-3 col-sm-6 mb-1 pr-1 pl-1">
                <label class="my-1 mr-2 font-weight-bold" for="loaibaocao">@Html.Raw(GlobalRes.lbmaphanloai)</label>
                <select class="selectpicker show-tick my-1 mr-sm-2" id="maphanloai">

                    @if (ViewBag.flag == "vi")
                    {
                        <option selected value="null">BAN,XK</option>

                        <option value="BAN">BAN</option>

                        <option value="XK">XK</option>
                    }
                    else
                    {
                        <option selected value="null">SALES,EXPORT</option>

                        <option value="BAN">SALES</option>

                        <option value="XK">EXPORT</option>
                    }
                </select>
            </div>

            <div class="form-group col-md-3 col-sm-6 mb-1 pr-1 pl-1">
                <label class="my-1 mr-2 font-weight-bold" for="loaibaocao">@Html.Raw(GlobalRes.lbnhomhang)</label>
                <select class="selectpicker show-tick my-1 mr-sm-2" name="nhomhang" id="nhomhang" data-actions-box="true" multiple data-selected-text-format="count > 3">
                    <option selected value="ALL">@Html.Raw(GlobalRes.lbtatca)</option>
                    @foreach (var i in ViewBag.nhomhang)
                    {
                        <option value="@i.MANHOM">@i.MANHOM - @i.TENNHOM</option>
                    }
                    @*<option value="64">64.STA,64.PME - Hàng Stada</option>*@
                    @*<option value="3">Nhóm hàng khác</option>*@
                </select>
            </div>
            <div class="form-group col-md-3 col-sm-6 mb-1 pr-1 pl-1">
                <label class="my-1 mr-2 font-weight-bold" for="loaibaocao">@Html.Raw(GlobalRes.lbphanloaichitietkhachhang)</label>
                <select class="selectpicker show-tick my-1 mr-sm-2" id="Checkboxlist3" multiple data-selected-text-format="count > 1" data-actions-box="true">
                    <option selected value="null">@Html.Raw(GlobalRes.lbtatca)</option>
                    @foreach (var x in ViewBag.maplkh)
                    {
                        <option value="@x.phanloaikhachhang">@x.phanloaikhachhang &bull; @x.tenphanloai</option>
                    }
                </select>
            </div>
        </div>
    </div>
