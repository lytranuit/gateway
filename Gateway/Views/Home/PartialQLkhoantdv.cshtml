@model IEnumerable<ApplicationChart.Models.TBL_DANHMUCKHOANTDV>
<table id="example23" class="display nowrap table table-hover table-bordered w-100 pt-0 mb-1">
    <!--Table head-->
    <thead style="background-color:rgb(66, 133, 244);">
        <tr class="text-white">
            <th>MÃ CHI NHÁNH</th>
            <th>THÁNG</th>
            <th>MÃ TDV</th>
            <th>TÊN TDV</th>
            <th>PHÂN LOẠI</th>
            <th>MÃ TDV TỔ TRƯỞNG</th>
            <th>DS KHOÁN</th>
            <th>ID LOCAL TRÌNH DƯỢC</th>
            <th>ID GLOBAL TRÌNH DƯỢC</th>
            <th>ID GLOBAL TỔ TRƯỞNG</th>
            <th>TÊN TỔ TRƯỞNG</th>
            <th>ID GLOBAL QUẢN LÝ</th>
            <th>TÊN QUẢN LÝ</th>
            <th>ID GLOBAL GIÁM ĐỐC CN</th>
            <th>TÊN GIÁM ĐỐC CN</th>
            <th>ID GLOBAL GIÁM ĐỐC VÙNG</th>
            <th>TÊN GIÁM ĐỐC VÙNG</th>
            <th>NGÀY NHẬP</th>
        </tr>
    </thead>
    <!--Table head-->
    <!--Table body-->
    <tbody>
        @{
            foreach (var i in Model)
            {
                <tr>
                    <td class="text-center">@i.macn</td>
                    <td>@i.thang</td>
                    <td>@i.matdv</td>
                    <td></td>
                    <td>@i.phanloai</td>
                    <td>@i.matdvtotruong</td>
                    <td>@string.Format("{0:#,##0}", i.dskhoan)</td>
                    <td>@i.idglobal</td>
                    <td>@i.idlocal</td>
                    <td>@i.idglobal_supervisor</td>
                    <td></td>
                    <td>@i.idglobal_manager</td>
                    <td></td>
                    <td>@i.idglobal_director</td>
                    <td></td>
                    <td>@i.idglobal_region</td>
                    <td></td>
                    <td class="text-center">@i.ngay.ToString("dd/MM/yyyy")</td>
                    @*@if (i.DUYETDH == false)
                        {
                            <td class="text-center" title="Chờ duyệt"><span hidden>3</span><i class="fa fa-exclamation-triangle fa-2x" style="color:orange;" aria-hidden="true"></i></td>
                            <td class="text-center" style="width:110px;"><button type="button" class="btn btn-sm btn-primary waves-effect transition-3d-hover btnxemhd" data-toggle="modal" data-target="#ModalView"><i class="fa fa-2x fa-eye"></i></button></td>
                        }
                        @if (i.DUYETDH == null)
                        {
                            <td class="text-center" title="Từ chối"><span hidden>4</span><i class="fa fa-times-circle fa-2x" style="color:red;" aria-hidden="true"></i></td>
                            <td class="text-center" style="width:110px;"><button type="button" class="btn btn-sm btn-primary waves-effect transition-3d-hover btnxemhd" data-toggle="modal" data-target="#ModalView"><i class="fa fa-2x fa-eye"></i></button></td>
                        }
                        else if (i.DUYETDH == true)
                        {
                            <td class="text-center" title="Đã duyệt"><span hidden>2</span><i class="fa fa-check-circle fa-2x" style="color:#228117;" aria-hidden="true"></i></td>
                            <td class="text-center" style="width:110px;"><button type="button" class="btn btn-sm btn-primary waves-effect transition-3d-hover btnxemhd" data-toggle="modal" data-target="#ModalView"><i class="fa fa-2x fa-eye"></i></button></td>
                        }*@
                </tr>
            }
        }
    </tbody>
    <!--Table body-->
</table>



