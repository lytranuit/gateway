@model ApplicationChart.Models.Dulieutimkiem
<div class="form-group col-md-6 col-lg-3 col-sm-6 mb-0">
    <label class="my-1 mr-2 font-weight-bold" for="ploaict">Phân loại hóa đơn<code>(*)</code></label>
    <select title="Chọn phân loại" class="selectpicker my-1 mr-sm-2 show-tick" multiple id="phanloai">
        @foreach (var i in Model.PHANLOAI)
        {
            <option value="@i">@i</option>
        }
    </select>
</div>
<div class="form-group col-md-6 col-lg-3 mb-0">
    <label class="my-1 mr-2 font-weight-bold" for="mahh">Mã khách hàng</label>
    <select title="Chọn khách hàng" class="selectpicker show-tick my-1 mr-sm-2" multiple data-actions-box="true" data-selected-text-format="count > 3" data-live-search="true" name="mahh" id="makh">
       
        @foreach (var i in Model.KHACHHANG)
        {
            <option value="@i.MAKH">@i.MAKH - @i.DONVI</option>
        }
    </select>
</div>
<div class="form-group col-md-6 col-lg-3 mb-0">
    <label class="my-1 mr-2 font-weight-bold" for="khuvuc">Khu vực</label>
    <select title="Chọn khu vực" class="selectpicker show-tick my-1 mr-sm-2"  multiple data-actions-box="true" data-selected-text-format="count > 3" id="khuvuc">
        @foreach (var i in Model.KHUVUC)
        {
            <option value="@i.matinh">@i.matinh - @i.tentinh</option>
        }
    </select>
</div>
<div class="form-group col-md-6 col-lg-3 mb-0">
    <label class="my-1 mr-2 font-weight-bold" for="quyetdinh">Mã hàng hóa</label>
    <select title="Chọn hàng hóa" class="selectpicker show-tick my-1 mr-sm-2" multiple data-actions-box="true" data-selected-text-format="count > 3" data-live-search="true" id="mahh">
        @foreach (var i in Model.SANPHAM)
        {
            <option value="@i.MaHH">@i.MaHH - @i.TenHH</option>
        }
    </select>
</div>

<div class="form-group col-md-6 col-lg-3 mb-0">
    <label class="my-1 mr-2 font-weight-bold" for="loaihd">Mã TDV</label>
    <select title="Chọn TDV" class="selectpicker show-tick my-1 mr-sm-2" multiple data-actions-box="true" data-selected-text-format="count > 3" data-live-search="true" id="matdv">
        @foreach (var i in Model.TDV)
        {
            <option value="@i.MATDV">@i.MATDV - @i.TENTDV</option>
        }
    </select>
</div>
<div class="form-group col-md-6 col-lg-3 mb-0">
    <label class="my-1 mr-2 font-weight-bold" for="ploai">Mã CT Khuyến Mãi</label>
    <select title="Chọn CTKM" class="selectpicker my-1 mr-sm-2  show-tick" multiple data-actions-box="true" data-selected-text-format="count > 3" data-live-search="true" id="mactkm">
        @foreach (var i in Model.CTKM)
        {
            <option value="@i.MAKM">@i.MAKM - @i.TENKM</option>
        }
    </select>
</div>
<div class="form-group col-md-6 col-lg-3 mb-0">
    <label class="my-1 mr-2 font-weight-bold" for="mactht">Mã CT Hỗ trợ</label>
    <select title="Chọn CTHT" class="selectpicker my-1 mr-sm-2  show-tick" multiple data-actions-box="true" data-selected-text-format="count > 3" data-live-search="true" id="mactht">
        @foreach (var i in Model.CTHT)
        {
            <option value="@i.MACTHT">@i.MACTHT - @i.TENCTHT</option>
        }
    </select>
</div>
<div class="form-group col-md-6 col-lg-3 col-sm-6 mb-0">
    <label class="my-1 mr-2 font-weight-bold" for="quyetdinh">Mã nhóm</label>
    <select title="Chọn nhóm" class="selectpicker show-tick my-1 mr-sm-2" id="manhom">
        <option></option>
        <option value="1">50,51,60,61,62,63,70</option>
        <option value="0">NOT50,51,60,61,62,63,70</option>
    </select>
</div>
<div class="form-group col-md-6 col-lg-3 col-sm-6 mb-0">
    <label class="my-1 mr-2 font-weight-bold" for="ploai">Tài khoản</label>
    <select title="Chọn tài khoản" class="selectpicker my-1 mr-sm-2  show-tick" id="taikhoan">
        <option></option>
        <option value="155">155</option>
        <option value="156">156</option>
    </select>
</div>

<div class="form-group col-md-6 col-lg-3 col-sm-6 mb-0">
    <label class="my-1 mr-2 font-weight-bold" for="ploaict">Nhập xuất tại kho</label>
    <select title="Chọn" class="selectpicker my-1 mr-sm-2 show-tick" id="makho">
        @foreach (var i in Model.KHO)
        {
            <option value="@i.noinhan">@i.noinhan</option>
        }
    </select>
</div>

