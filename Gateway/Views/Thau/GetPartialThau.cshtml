<div class="form-group col-md-12 mb-3" id="PartialLocHD">
    <label class="my-1 mr-2 font-weight-bold" for="hopdong">Hợp đồng - Khách hàng<code>(*)</code></label>
    <select title="Chọn hợp đồng - khách hàng" multiple data-actions-box="true" name="mahd" data-selected-text-format="count > 1" data-live-search="true" class="selectpicker my-1 mr-sm-2" id="hopdong">
        @if (Model.DANHMUC.GroupBy(n => n.MACN).Count() == 1)
        {
            foreach (var i in Model.DANHMUC)
            {
                <option value="{'MAHD':'@i.MAHD','MAKH':'@i.MAKH','MACN':'@i.MACN'}">@i.MAKH - @i.MAHD - @i.DONVI</option>
            }
        }
        else
        {
            foreach (var i in Model.DANHMUC)
            {
                <option value="{'MAHD':'@i.MAHD','MAKH':'@i.MAKH','MACN':'@i.MACN'}">@i.MACN - @i.MAKH - @i.MAHD - @i.DONVI</option>
            }
        }
    </select>
</div>
