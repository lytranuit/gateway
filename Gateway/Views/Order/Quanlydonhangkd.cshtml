@section scripts {

    <script src="~/Scripts/bootstrap-select.js?version=3"></script>
    <script src="~/Content/Order/js/lib/datatables/datatables.min.js?version=6"></script>
    <script src="~/Scripts/Quanlydonhangkd.js?version=10"></script>
    <script>
        function CovertDatetime(i) {
            var milli = i.replace(/\/Date\((-?\d+)\)\//, '$1');
            var d = new Date(parseInt(milli));
            var dformat = ("00" + d.getDate()).slice(-2) + "/" + ("00" + (d.getMonth() + 1)).slice(-2) + "/" + d.getFullYear() + " " + ("00" + d.getHours()).slice(-2) + ":" + ("00" + d.getMinutes()).slice(-2);
            return dformat;
        }
        $(document).ready(function () {
            $("#Viewtable").on("change", "#checkall", function () {
                $('[name="check"]').prop('checked', $(this).prop("checked"));
            });
            $("#btnthaydoi").click(function () {
                var prevent = 0;
                if ($(window).width() < 800 || $(window).height() < 500) {
                    $('#tablehanghoa > tbody > tr.hanghoatr').each(function () {
                        if ($(this).find('.sl3').val() == 0 || $(this).find('.sl3').val() == "") {
                            toastr.options = {
                                "closeButton": false,
                                "debug": false,
                                "newestOnTop": true,
                                "progressBar": true,
                                "positionClass": "toast-top-right",
                                "preventDuplicates": false,
                                "onclick": null,
                                "showDuration": "300",
                                "hideDuration": "1000",
                                "timeOut": "5000",
                                "extendedTimeOut": "1000",
                                "showEasing": "swing",
                                "hideEasing": "linear",
                                "showMethod": "fadeIn",
                                "hideMethod": "fadeOut"
                            }
                            Command: toastr["warning"]("Xin điền đẩy đủ số lượng cho sản phẩm " + $(this).find('td:eq(0)').text() + " hoặc xóa sản phẩm", "Thông báo")
                            prevent = 1;
                            return false;
                        }
                    });
                    if (prevent == 0) {
                        if ($("#khachhang").val() == "" || $("#tablehanghoa > tbody > tr.hanghoatr").length == 0 || $("#hopdong").val() == "") {
                            toastr.options = {
                                "closeButton": false,
                                "debug": false,
                                "newestOnTop": true,
                                "progressBar": true,
                                "positionClass": "toast-top-right",
                                "preventDuplicates": false,
                                "onclick": null,
                                "showDuration": "300",
                                "hideDuration": "1000",
                                "timeOut": "5000",
                                "extendedTimeOut": "1000",
                                "showEasing": "swing",
                                "hideEasing": "linear",
                                "showMethod": "fadeIn",
                                "hideMethod": "fadeOut"
                            }
                            Command: toastr["warning"]("Xin điền đầy đủ thông tin đơn hàng", "Thông báo")
                        }
                        else {
                            $.confirm({
                                title: '<b>THÔNG BÁO</b>',
                                content: 'Bạn có chắc chắn muốn thay đổi đơn hàng này ?',
                                buttons: {
                                    confirm: {
                                        text: 'Chắc chắn',
                                        btnClass: 'btn-success',
                                        keys: ['enter'],
                                        action: function () {
                                            $.ajax({
                                                type: "POST",
                                                url: "@Url.Action("DelDonHangKD", "Order")",
                                                datatype: 'json',
                                                contentType: "application/json",
                                                data: '{madh: ' + JSON.stringify($("#sodonhang").text()) + '}',
                                                error: function () {
                                                    toastr.options = {
                                                        "closeButton": true,
                                                        "debug": false,
                                                        "newestOnTop": true,
                                                        "progressBar": true,
                                                        "positionClass": "toast-top-right",
                                                        "preventDuplicates": false,
                                                        "onclick": null,
                                                        "showDuration": "300",
                                                        "hideDuration": "1000",
                                                        "timeOut": "5000",
                                                        "extendedTimeOut": "1000",
                                                        "showEasing": "swing",
                                                        "hideEasing": "linear",
                                                        "showMethod": "fadeIn",
                                                        "hideMethod": "fadeOut"
                                                    }
                                                    Command: toastr["warning"]("Vui lòng thử lại", "Lỗi")
                                                },
                                                success: function (data) {
                                                    if (data == 1) {
                                                        toastr.options = {
                                                            "closeButton": true,
                                                            "debug": false,
                                                            "newestOnTop": true,
                                                            "progressBar": true,
                                                            "positionClass": "toast-top-right",
                                                            "preventDuplicates": false,
                                                            "onclick": null,
                                                            "showDuration": "300",
                                                            "hideDuration": "1000",
                                                            "timeOut": "5000",
                                                            "extendedTimeOut": "1000",
                                                            "showEasing": "swing",
                                                            "hideEasing": "linear",
                                                            "showMethod": "fadeIn",
                                                            "hideMethod": "fadeOut"
                                                        }
                                                        Command: toastr["warning"]("Đơn hàng đang ở trạng thái đang xử lý hoặc đã được duyệt. Không thể thay đổi", "Lỗi")
                                                    }
                                                    else {
                                                        var url = lang + '/crm/AddDonHangKD';
                                                        var data1 = [];
                                                        $("#tablehanghoa > tbody >tr.hanghoatr").each(function () {
                                                            data1.push({
                                                                "STT": $(this).closest('tr').find('td:eq(0)').text()
                                                               , "DONVI": $("#khachhang option:selected").attr('tabindex')
                                                               , "KHACHHANG": $("#khachhang").val()
                                                               , "HOPDONG": $("#hopdong").val()
                                                               , "ck": Number($("#hopdong option:selected").attr("data-ck"))
                                                               , "MAHH": $(this).find('td:eq(0)').attr("data-mahh")
                                                               , "TENHH": $(this).find('td:eq(0)').attr("data-tenhh")
                                                               , "DVT": $(this).find('td:eq(0)').attr("data-dvt")
                                                               , "SOLUONG": Number($(this).find('.sl3').val().toString().replace(/[^\d.]/g, '').replace(".00", ""))
                                                               , "GIABAN_VAT": Number($(this).find('td:eq(4)').text().replace(/[^\d.]/g, '').replace(".00", ""))
                                                               , "VAT": $("#vat").val()
                                                               , "GHICHU": $("#ghichu").val()
                                                               , "DATE": $(this).next('tr').find(".date").val()
                                                               , "MADH": $("#sodonhang").text()
                                                            });
                                                        });
                                                        $.ajax({
                                                            url: url,
                                                            type: "POST",
                                                            datatype: 'json',
                                                            contentType: "application/json",
                                                            data: JSON.stringify(data1),
                                                            success: function (data) {
                                                                if (data == 0) {
                                                                    toastr.options = {
                                                                        "closeButton": false,
                                                                        "debug": false,
                                                                        "newestOnTop": true,
                                                                        "progressBar": true,
                                                                        "positionClass": "toast-top-right",
                                                                        "preventDuplicates": false,
                                                                        "onclick": null,
                                                                        "showDuration": "300",
                                                                        "hideDuration": "1000",
                                                                        "timeOut": "5000",
                                                                        "extendedTimeOut": "1000",
                                                                        "showEasing": "swing",
                                                                        "hideEasing": "linear",
                                                                        "showMethod": "fadeIn",
                                                                        "hideMethod": "fadeOut"
                                                                    }
                                                                    Command: toastr["warning"]("Tạo không thành công vui lòng thử lại !", "Thông báo")
                                                                }
                                                                else {
                                                                    $.confirm({
                                                                        title: '<b>THÔNG BÁO</b>',
                                                                        content: 'Đã chỉnh sửa thành công đơn hàng số <b>' + data + '</b>.',
                                                                        buttons: {
                                                                            confirm: {
                                                                                text: 'Đóng',
                                                                                btnClass: 'btn-primary',
                                                                                keys: ['enter'],
                                                                                action: function () {
                                                                                    window.location.reload();
                                                                                }
                                                                            }

                                                                        }
                                                                    });
                                                                }
                                                            },
                                                            error: function (request, status, error) {
                                                                toastr.options = {
                                                                    "closeButton": false,
                                                                    "debug": false,
                                                                    "newestOnTop": true,
                                                                    "progressBar": true,
                                                                    "positionClass": "toast-top-right",
                                                                    "preventDuplicates": false,
                                                                    "onclick": null,
                                                                    "showDuration": "300",
