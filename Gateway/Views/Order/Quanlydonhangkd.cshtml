<div id="heightscreen">
    <div class="w3-card w3-white" style="border-radius:0.25rem">
        <ol class="breadcrumb" style="margin-top:42px;margin-bottom:0px;">
            <li class="breadcrumb-item"><a style="color:#007bff;font-weight:700" href="#">PHÒNG KINH DOANH</a></li>
            <li class="breadcrumb-item active w3-text-black font-weight-normal">QUẢN LÝ ĐƠN HÀNG VỀ PHÒNG KINH DOANH</li>
        </ol>
    </div>
    <div class="alert alert-primary mb-0 p-2 font-small" role="alert">
        <strong>GHI CHÚ :</strong> Các trạng thái của 1 đơn đặt hàng : <i class="fa fa-exclamation-triangle fa-2x" style="color:orange;" aria-hidden="true"></i> Chờ duyệt , <i class="fa fa-times-circle fa-2x" style="color:red;" aria-hidden="true"></i> Từ chối , <i class="fa fa-check-circle fa-2x" style="color:#228117;" aria-hidden="true"></i> Đã duyệt , <i class="fa fa-spinner fa-spin fa-2x text-dark" aria-hidden="true"></i> Đang xử lý
    </div>
    @Html.AntiForgeryToken()
    <div class="w3-container box text-left" style="margin-top:3px;margin-bottom:2px;background-color:white;">
        <div class="row pt-2 pb-2">
            <div class="form-group col-xl-3 col-lg-3 col-md-3 col-sm-12 mb-1">
                <label class="col-form-label" for="formGroupExampleInput">Từ ngày<code class="bg-white">(*)</code></label>
                <input value="@DateTime.Now.ToString("01/MM/yyyy")" style="width:100%" class="form-control NGAY p-2" id="tungay" name="tungay" placeholder="DD/MM/YYYY" type="text" data-validation="digit" data-inputmask="'alias': 'dd/mm/yyyy'" data-mask="" autocomplete="off">
            </div>
            <div class="form-group col-xl-3 col-lg-3 col-md-3 col-sm-12 mb-1">
                <label class="col-form-label" for="formGroupExampleInput">Đến ngày<code class="bg-white">(*)</code></label>
                <input value="@DateTime.Now.ToString("dd/MM/yyyy")" style="width:100%" class="form-control NGAY p-2" id="denngay" name="denngay" placeholder="DD/MM/YYYY" type="text" data-validation="digit" data-inputmask="'alias': 'dd/mm/yyyy'" data-mask="" autocomplete="off">
            </div>
            <div class="form-group col-xl-3 col-lg-3 col-md-3 col-sm-12 mb-1">
                <label class="col-form-label" for="formGroupExampleInput">Khu vực</label>
                <select id="matinh" title="Chọn mã tỉnh" class="selectpicker" data-live-search="true" name="option">
                    <option selected value="">KHÔNG CHỌN</option>
                    @foreach (var i in Model)
                    {
                        <option value="@i.matinh">@i.matinh - @i.tentinh</option>
                    }
                </select>
            </div>
            <div class="form-group col-xl-3 col-lg-3 col-md-3 col-sm-12 mb-1">
                <label class="col-form-label" for="formGroupExampleInput">Người tạo</label>
                <select id="usertao" title="Chọn người tạo" class="selectpicker" data-live-search="true" name="option">
                    <option selected value="">KHÔNG CHỌN</option>
                    @foreach (var i in ViewBag.nguoitao)
                    {
                        <option value="@i.TAIKHOAN">@i.TAIKHOAN - @i.HOVATEN</option>
                    }
                </select>
            </div>
            <div class="col-xl-2 col-lg-2 col-md-2 col-sm-12">
                <button id="btnsubmit" type="button" class="btn btn-success btn-sm transition-3d-hover m-0 w-100"><i class="fa fa-search" aria-hidden="true"></i> <b>TÌM KIẾM</b></button>
            </div>
            <div class="col-xl-2 col-lg-2 col-md-2 col-sm-12">
                <button id="btninkhuvuc" type="button" class="btn btn-warning btn-sm transition-3d-hover m-0 w-100"><i class="fa fa-print" aria-hidden="true"></i> <b>IN ĐH KHU VỰC</b></button>
            </div>
            <div class="col-xl-2 col-lg-2 col-md-2 col-sm-12">

                <button id="btnin" type="button" class="btn btn-primary btn-sm transition-3d-hover m-0 w-100"><i class="fa fa-print" aria-hidden="true"></i> <b>IN ĐH</b></button>
            </div>
            <div class="col-xl-2 col-lg-2 col-md-2 col-sm-12">
                <button id="btninkhuvucct" type="button" class="btn btn-warning btn-sm transition-3d-hover m-0 w-100"><i class="fa fa-print" aria-hidden="true"></i> <b>IN ĐHKV CHI TIẾT</b></button>
            </div>
            <div class="col-xl-2 col-lg-2 col-md-2 col-sm-12">

                <button id="btninct" type="button" class="btn btn-primary btn-sm transition-3d-hover m-0 w-100"><i class="fa fa-print" aria-hidden="true"></i> <b>IN ĐH CHI TIẾT</b></button>
            </div>
            <div class="col-xl-2 col-lg-2 col-md-2 col-sm-12">
                <button type="button" class="btn btn-danger btn-sm transition-3d-hover m-0 w-100" onClick="location.href='@Url.Action("quan-ly-don-hang-ve-phong-kinh-doanh", "Order")';return false;"><i class="fa fa-arrow-left" aria-hidden="true"></i> <b>TẢI LẠI</b></button>
            </div>
        </div>
    </div>
    <div class="w3-content p-1 box" style="background-color:white;">
        <div class="form-group col-lg-12 col-md-12 mb-0 hidden" id="divloc">
            <label class="col-form-label" for="formGroupExampleInput">Lọc trạng thái</label>
            <select id="loctrangthai" class="selectpicker">
                <option value="1">TẤT CẢ</option>
                <option value="2" data-icon="fa fa-check-circle text-success fa-2x pr-2">ĐÃ DUYỆT</option>
                <option value="3" data-icon="fa fa-exclamation-triangle text-warning fa-2x pr-1">CHỜ DUYỆT</option>
                <option value="4" data-icon="fa fa-times-circle text-danger fa-2x pr-2">TỪ CHỐI</option>
            </select>
        </div>
        <div class="" id="Viewtable">
        </div>
    </div>
</div>
