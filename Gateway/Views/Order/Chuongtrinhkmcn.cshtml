@model IEnumerable<ApplicationChart.Models.ListChuongTrinhKM>
@{
    ViewBag.Title = "Chuongtrinhkmcn";
    Layout = "~/Views/Shared/Layout1.cshtml";
}

@section styles {
    <link href="~/Content/Datatable.css?version=8" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/css/bootstrap-datepicker3.css" />
    <link rel="stylesheet" href="~/Content/OrderStyle.css?version=42">
}
<div id="heightscreen">
    <div class="w3-card w3-white" style="border-radius:0.25rem">
        <ol class="breadcrumb" style="margin-top:42px;margin-bottom:0px;">
            <li class="breadcrumb-item"><a style="color:#007bff;font-weight:700" href="#">CRM</a></li>
            <li class="breadcrumb-item active w3-text-black font-weight-normal">CHƯƠNG TRÌNH KHUYẾN MÃI</li>
        </ol>
    </div>
    <div class="w3-content w3-padding box p-0 pt-1" style="background-color:white;margin-top:3px;">
        <div class="w3-row card">
            <div class="card-header text-center">
                <strong>CHƯƠNG TRÌNH KHUYẾN MÃI</strong>
            </div>
            <div class="card-body p-1" id="Viewtable">
                <table id="example23" class="display nowrap table table-hover table-bordered">
                    <thead style="background-color:rgb(66, 133, 244);">
                        <tr class="text-white">
                            <th style="width:50px;">#</th>
                            <th>Mã KM</th>
                            <th>Tên khuyến mãi</th>
                            <th>Ngày bắt đầu</th>
                            <th>Ngày kết thúc</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int count = 1;
                            foreach (var i in Model)
                            {
                                <tr>
                                    <th scope="row" class="text-center">@(count)</th>
                                    <td class="text-center">@i.MACTKM</td>
                                    <td>@i.TENCTKM</td>
                                    <td class="text-center">@i.ngaybatdau.ToString("dd/MM/yyyy")</td>
                                    <td class="text-center">
                                        @if (@i.ngayketthuc != null)
                                        {
                                            @i.ngayketthuc.Value.ToString("dd/MM/yyyy")
                                        }
                                    </td>
                                </tr>
                                count = count + 1;
                            }
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
@section scripts {
    @*<script type="text/javascript" src="~/Scripts/bootstrap-datepicker.js?version=1"></script>*@
    <script src="~/Scripts/bootstrap-select.js?version=3"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.5.6/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.5.6/js/buttons.flash.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    @*<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>*@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.5.6/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.5.6/js/buttons.print.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#example23").dataTable();
        });
    </script>

}