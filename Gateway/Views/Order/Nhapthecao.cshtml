                                <label class="col-form-label" for="editngaygiao">Nhập số phiếu<code class="bg-white">(*)</code></label>
                                <input id="sothe" class="form-control font-weight-normal m-0" value="" type="text" autocomplete="off">
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-12 col-lg-6">
                            <!-- Default input -->
