                                    @foreach (var i in Model.ListKH)
                                    {
                                        <option data-tokens="@i.MAKH - @i.DONVI" tabindex="@i.DONVI" data-subtext="(@i.DIACHI)" data-hanmuc="@i.HANMUC" data-matdv="@i.MATDV" value="@i.MAKH">@i.MAKH - @i.DONVI</option>
                                    }
                                </select>
                            </div>
                            <!-- Default input -->
                        </div>
                        <div class="col-sm-12 col-md-12 col-lg-6">
                            <!-- Default input -->
                            <div class="form-group mb-0">
                                <label class="col-form-label" for="editngaygiao">Doanh số</label>
                                <input id="doanhso" readonly class="form-control font-weight-normal m-0" value="" type="text" autocomplete="off">
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-12 col-lg-6">
