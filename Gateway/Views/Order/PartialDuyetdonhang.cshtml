@model IEnumerable<ApplicationChart.Models.DTA_DONDATHANG>
<table id="example23" class="display nowrap table table-hover table-bordered">
    <!--Table head-->
    <thead style="background-color:rgb(66, 133, 244);">
        <tr class="text-white">
            <th style="width:50px;">#</th>
            <th>Số đơn hàng</th>
            <th>Ngày đặt hàng</th>
            <th>Dự kiến giao hàng</th>
            <th>Tên khách hàng</th>
            <th>MÃ TDV</th>
            <th class="no-sort" data-toggle="modal" data-target="#modaltrangthai">Trạng thái</th>
            <th style="width:110px;">Hành động</th>
        </tr>
    </thead>
    <!--Table head-->
    <!--Table body-->
    <tbody>
        @{
            int count = 1;
            foreach (var i in Model)
            {
                <tr>
                    <th scope="row" class="text-center">@(count)</th>
                    <td class="text-center">@i.MADH</td>
                    <td class="text-center">@i.NgayDat.ToString("dd/MM/yyyy")</td>
                    @if (i.NgayGiao != null)
                    {
                        <td class="text-center">@i.NgayGiao.Value.ToString("dd/MM/yyyy")</td>
                    }
                    else
                    {
                        <td class="text-center">N/A</td>
                    }
                    <td>@i.DONVI</td>
                    <td>@i.MATDV</td>
                    @if (i.DUYETDH == false)
                    {
                        <td class="text-center" title="Chờ duyệt"><span hidden>3</span><i class="fa fa-exclamation-triangle fa-2x" style="color:orange;" aria-hidden="true"></i></td>
                        <td class="text-center" style="width:110px;"><button type="button" class="btn btn-sm btn-primary waves-effect transition-3d-hover btnxemhd" data-toggle="modal" data-target="#ModalView"><i class="fa fa-2x fa-eye"></i></button></td>
                    }
                    @if (i.DUYETDH == null)
                    {
                        <td class="text-center" title="Từ chối"><span hidden>4</span><i class="fa fa-times-circle fa-2x" style="color:red;" aria-hidden="true"></i></td>
                        <td class="text-center" style="width:110px;"><button type="button" class="btn btn-sm btn-primary waves-effect transition-3d-hover btnxemhd" data-toggle="modal" data-target="#ModalView"><i class="fa fa-2x fa-eye"></i></button></td>
                    }
                    else if (i.DUYETDH == true)
                    {
                        <td class="text-center" title="Đã duyệt"><span hidden>2</span><i class="fa fa-check-circle fa-2x" style="color:#228117;" aria-hidden="true"></i></td>
                        <td class="text-center" style="width:110px;"><button type="button" class="btn btn-sm btn-primary waves-effect transition-3d-hover btnxemhd" data-toggle="modal" data-target="#ModalView"><i class="fa fa-2x fa-eye"></i></button></td>
                    }
                </tr>
                count = count + 1;
            }
        }
    </tbody>
    <!--Table body-->
</table>

