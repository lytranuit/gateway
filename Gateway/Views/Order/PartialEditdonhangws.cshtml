                    "hideEasing": "linear",
                    "showMethod": "fadeIn",
                    "hideMethod": "fadeOut"
                }
                Command: toastr["warning"]("Lấy dữ liệu thất bại, vui lòng thử lại", "Lỗi")
            },
            success: function (data) {
                $("#themsanpham").html(data);
                $('.selectpicker').selectpicker('refresh');
            },
