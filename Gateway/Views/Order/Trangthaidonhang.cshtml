                            btnClass: 'btn-success',
                            keys: ['enter'],
                            action: function () {
                                $.ajax({
                                    type: "POST",
                                    url: "@Url.Action("Updatedonhang", "Order")",
                                    datatype: 'json',
                                    contentType: "application/json",
                                    data: '{sohd: ' + JSON.stringify(hang.find('td:eq(0)').attr("data-sohd")) + ', loai: ' + JSON.stringify(1) + '}',
                                    success: function (data) {
                                        toastr.options = {
                                            "closeButton": false,
                                            "debug": false,
                                            "newestOnTop": true,
                                            "progressBar": true,
                                            "positionClass": "toast-top-right",
                                            "preventDuplicates": false,
                                            "onclick": null,
                                            "showDuration": "300",
                                            "hideDuration": "1000",
                                            "timeOut": "5000",
                                            "extendedTimeOut": "1000",
                                            "showEasing": "swing",
                                            "hideEasing": "linear",
                                            "showMethod": "fadeIn",
                                            "hideMethod": "fadeOut"
                                        }
                                        Command: toastr["success"]("Xác nhận giao hàng thành công hóa đơn " + hang.find('td:eq(0)').attr("data-sohd") + "", "Thông báo")
                                        hang.find('td:eq(3)').html('<button type="button" class="btn btn-sm btn-success waves-effect transition-3d-hover m-0 p-2" disabled><i class="fa fa-2x fa-check-circle"></i></button>');
                                    },
                                    error: function (request, status, error) {
                                        toastr.options = {
                                            "closeButton": false,
                                            "debug": false,
                                            "newestOnTop": true,
                                            "progressBar": true,
                                            "positionClass": "toast-top-right",
                                            "preventDuplicates": false,
                                            "onclick": null,
                                            "showDuration": "300",
                                            "hideDuration": "1000",
                                            "timeOut": "5000",
                                            "extendedTimeOut": "1000",
                                            "showEasing": "swing",
                                            "hideEasing": "linear",
                                            "showMethod": "fadeIn",
                                            "hideMethod": "fadeOut"
                                        }
                                        Command: toastr["warning"]("Không thành công ,Vui lòng thử lại !", "Thông báo")
                                        $('#loading').modal('hide');
                                    },
                                    timeout: 20000,
                                });
                            }
                        },
                        cancel: {
                            text: 'Hủy',
                            btnClass: 'btn-danger',
                            keys: ['esc'],
                            action: function () {

                            }
                        }
                    }
                });

            });
            $("#PartialResult").on("click", ".btnlido", function () {

                var lido = $(this).data('lido');

                $("#textlido").text(lido);
                // As pointed out in comments, 
                // it is unnecessary to have to manually call the modal.
                // $('#addBookDialog').modal('show');
            });
            $("#PartialResult").on("click", ".btnkhonggiao", function () {
                var hang = $(this).closest('tr');
                $.confirm({
                    title: 'THÔNG BÁO',
                    content: '<div class="form-group mb-0"><label class="control-label font-italic">Nhập lí do nếu bạn chắc chắn xác nhận không giao hàng hóa đơn số <b class="text-danger">' + hang.find('td:eq(0)').attr("data-sohd") + '</b></label><input autofocus="" type="text" id="input-name" autocomplete="off" placeholder="Nhập lí do" class="form-control"></div>',
                    buttons: {
                        success: {
                            text: 'Chắc chắn',
                            btnClass: 'btn-success',
                            action: function () {
                                var input = this.$content.find('input#input-name');
                                var errorText = this.$content.find('.text-danger');
                                if (!input.val().trim()) {
                                    $.alert({
                                        title: "Lỗi",
                                        content: "Bạn chưa nhập lí do !",
                                        type: 'red'
                                    });
                                    return false;
                                } else {
                                    $.ajax({
                                        type: "POST",
                                        url: "@Url.Action("Updatedonhang", "Order")",
                                        datatype: 'json',
                                    contentType: "application/json",
                                    data: '{sohd: ' + JSON.stringify(hang.find('td:eq(0)').attr("data-sohd")) + ', loai: ' + JSON.stringify(0) + ', lido: ' + JSON.stringify(input.val())  + '}',
                                    success: function (data) {
                                        toastr.options = {
                                            "closeButton": false,
                                            "debug": false,
                                            "newestOnTop": true,
                                            "progressBar": true,
                                            "positionClass": "toast-top-right",
                                            "preventDuplicates": false,
                                            "onclick": null,
                                            "showDuration": "300",
                                            "hideDuration": "1000",
                                            "timeOut": "5000",
                                            "extendedTimeOut": "1000",
                                            "showEasing": "swing",
                                            "hideEasing": "linear",
                                            "showMethod": "fadeIn",
                                            "hideMethod": "fadeOut"
                                        }
                                        Command: toastr["success"]("Xác nhận không giao hàng hóa đơn " + hang.find('td:eq(0)').attr("data-sohd") + "", "Thông báo")
                                        hang.find('td:eq(3)').html('<button type="button" class="btn btn-sm btn-danger waves-effect transition-3d-hover m-0 p-2"><i class="fa fa-2x fa-times"></i></button>');
                                    },
                                    error: function (request, status, error) {
                                        toastr.options = {
                                            "closeButton": false,
                                            "debug": false,
                                            "newestOnTop": true,
                                            "progressBar": true,
                                            "positionClass": "toast-top-right",
                                            "preventDuplicates": false,
                                            "onclick": null,
                                            "showDuration": "300",
                                            "hideDuration": "1000",
                                            "timeOut": "5000",
                                            "extendedTimeOut": "1000",
                                            "showEasing": "swing",
                                            "hideEasing": "linear",
                                            "showMethod": "fadeIn",
                                            "hideMethod": "fadeOut"
                                        }
                                        Command: toastr["warning"]("Không thành công ,Vui lòng thử lại !", "Thông báo")
                                        $('#loading').modal('hide');
                                    },
                                    timeout: 20000,
                                    });
                                }
                            }
                        },
                        cancel: {
                            text: 'Hủy',
                            btnClass: 'btn-danger',
                            action: function () {
                            }

                        }
                    }
                });
         

        });
            $("#PartialResult").on("click", ".btnthutien", function () {
                var hang = $(this).closest('tr');
                $.confirm({
                    title: '<b>THÔNG BÁO</b>',
                    content: 'Bạn có chắc chắn xác nhận đã thu tiền hóa đơn số <b class="text-danger">' + hang.find('td:eq(0)').attr("data-sohd") + '</b>',
                    buttons: {
                        confirm: {
                            text: 'Chắc chắn',
                            btnClass: 'btn-success',
                            keys: ['enter'],
                            action: function () {
                                $.ajax({
                                    type: "POST",
                                    url: "@Url.Action("Updatedonhang", "Order")",
                                    datatype: 'json',
                                    contentType: "application/json",
                                    data: '{sohd: ' + JSON.stringify(hang.find('td:eq(0)').attr("data-sohd")) + ', loai: ' + JSON.stringify(2) + '}',
                                    success: function (data) {
                                        toastr.options = {
                                            "closeButton": false,
                                            "debug": false,
                                            "newestOnTop": true,
                                            "progressBar": true,
                                            "positionClass": "toast-top-right",
                                            "preventDuplicates": false,
                                            "onclick": null,
                                            "showDuration": "300",
                                            "hideDuration": "1000",
                                            "timeOut": "5000",
                                            "extendedTimeOut": "1000",
                                            "showEasing": "swing",
                                            "hideEasing": "linear",
                                            "showMethod": "fadeIn",
                                            "hideMethod": "fadeOut"
                                        }
                                        Command: toastr["success"]("Xác nhận thu tiền thành công hóa đơn " + hang.find('td:eq(0)').attr("data-sohd") + "", "Thông báo")
                                        hang.find('td:eq(4)').html('<button type="button" class="btn btn-sm btn-success waves-effect transition-3d-hover m-0 p-2" disabled><i class="fa fa-2x fa-dollar"></i></button>');

                                    },
                                    error: function (request, status, error) {
                                        toastr.options = {
                                            "closeButton": false,
                                            "debug": false,
                                            "newestOnTop": true,
                                            "progressBar": true,
                                            "positionClass": "toast-top-right",
                                            "preventDuplicates": false,
                                            "onclick": null,
                                            "showDuration": "300",
                                            "hideDuration": "1000",
                                            "timeOut": "5000",
                                            "extendedTimeOut": "1000",
                                            "showEasing": "swing",
                                            "hideEasing": "linear",
                                            "showMethod": "fadeIn",
                                            "hideMethod": "fadeOut"
                                        }
                                        Command: toastr["warning"]("Không thành công ,Vui lòng thử lại !", "Thông báo")
                                        $('#loading').modal('hide');
                                    },
                                    timeout: 20000,
                                });
                            }
                        },
                        cancel: {
                            text: 'Hủy',
                            btnClass: 'btn-danger',
                            keys: ['esc'],
                            action: function () {

                            }
                        }
                    }
                });

            });
            $("#btntimkiem").click(function () {
                if ($("#tungay").val() == "" || $("#denngay").val() == "") {
                    toastr.options = {
                        "closeButton": false,
                        "debug": false,
                        "newestOnTop": true,
                        "progressBar": true,
                        "positionClass": "toast-top-right",
                        "preventDuplicates": false,
                        "onclick": null,
                        "showDuration": "300",
                        "hideDuration": "1000",
                        "timeOut": "5000",
                        "extendedTimeOut": "1000",
                        "showEasing": "swing",
                        "hideEasing": "linear",
                        "showMethod": "fadeIn",
                        "hideMethod": "fadeOut"
                    }
                    Command: toastr["warning"]("Vui lòng chọn ngày !", "Thông báo")
                }
                else {
                    $('#loading').modal({ backdrop: 'static', keyboard: false });
                    $.ajax({
                        type: "POST",
                        url: "@Url.Action("GetPartialTrangthaidonhang", "Order")",
                        datatype: 'json',
                        contentType: "application/json",
                        data: '{tungay: ' + JSON.stringify($("#tungay").val()) + ', denngay: ' + JSON.stringify($("#denngay").val()) + ', makh: ' + JSON.stringify($("#makh").val()) + ', matdv: ' + JSON.stringify($("#matdv").val()) + ', giaohang: ' + JSON.stringify($("#giaohang").val()) + ', thutien: ' + JSON.stringify($("#thutien").val()) + '}',
                        success: function (data) {
                            $("#PartialResult").html(data);
                            $("#example").dataTable({
                                "ordering": false,
                                "iDisplayLength": 50, dom: 'Bfrtip',
                                buttons: [
                                    'copy', 'excel'
                                ]
                            });

                            $('#loading').modal('hide');
                        },
                        error: function (request, status, error) {
                            toastr.options = {
                                "closeButton": false,
                                "debug": false,
                                "newestOnTop": true,
                                "progressBar": true,
                                "positionClass": "toast-top-right",
                                "preventDuplicates": false,
                                "onclick": null,
                                "showDuration": "300",
                                "hideDuration": "1000",
                                "timeOut": "5000",
                                "extendedTimeOut": "1000",
                                "showEasing": "swing",
                                "hideEasing": "linear",
                                "showMethod": "fadeIn",
                                "hideMethod": "fadeOut"
                            }
                            Command: toastr["warning"]("Không thành công ,Vui lòng thử lại !", "Thông báo")
                            $('#loading').modal('hide');
                        },
                        timeout: 20000,
                    });
                }
            });
        });
    </script>
}


