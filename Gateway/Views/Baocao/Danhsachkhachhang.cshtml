                    content: 'Bạn có muốn xóa khách hàng này?',
                    buttons: {
                        confirm: {
                            text: 'Xác nhận',
                            btnClass: 'btn-success',
                            keys: ['enter'],
                            action: function () {
                                $('#loading').modal('show')
                               $.ajax({
                                    type: "POST",
                                    url: "@Url.Action("xoaMAKH", "Baocao")",
                                    datatype: 'json',
                                    contentType: "application/json",
                                   data: '{makh: ' + JSON.stringify(id) + '}',
