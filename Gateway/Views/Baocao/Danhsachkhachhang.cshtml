@section scripts {
    <script src="~/Scripts/moment.js"></script>

    <script src="~/Scripts/bootstrap-select.js?version=3"></script>
    <script src="~/Content/Order/js/lib/datatables/datatables.min.js?version=6"></script>
    <script src="~/Content/Order/js/lib/datatables/datatables-init.js?version=2"></script>
    <script>
        var quyen = '@ViewBag.quyen';
        quyen = quyen.split(",");
        function CovertDatetime(i) {
            var milli = i.replace(/\/Date\((-?\d+)\)\//, '$1');
            var d = new Date(parseInt(milli));
            var dformat = ("00" + d.getDate()).slice(-2) + "/" + ("00" + (d.getMonth() + 1)).slice(-2) + "/" + d.getFullYear();
            return dformat;   // The function returns the product of p1 and p2
        }
        $(document).ready(async function () {

            $("#btnedit").click(function () {
                if ($("#dtedit").val() == "" || $("#ngaysinhedit").val() == "" || $("#tenedit").val() == "") {
                    toastr.options = {
                        "closeButton": false,
                        "debug": false,
                        "newestOnTop": true,
                        "progressBar": true,
                        "positionClass": "toast-top-right",
                        "preventDuplicates": false,
                        "onclick": null,
                        "showDuration": "300",
                        "hideDuration": "1000",
                        "timeOut": "5000",
                        "extendedTimeOut": "1000",
                        "showEasing": "swing",
                        "hideEasing": "linear",
                        "showMethod": "fadeIn",
                        "hideMethod": "fadeOut"
                    }
                    Command: toastr["warning"]("Bạn chưa điền đủ thông tin khách hàng!", "Thông báo")
                }
                else {
                    $.confirm({
                        title: '<b>THÔNG BÁO</b>',
                        content: 'Bạn có chắc chắn muốn thay đổi thông tin khách hàng này?',
                        buttons: {
                            confirm: {
                                text: 'Chắc chắn',
                                btnClass: 'btn-success',
                                keys: ['enter'],
                                action: function () {
                                    $.ajax({
                                        type: "POST",
                                        url: "@Url.Action("EditKhachHang", "Baocao")",
                                        contentType: "application/json",
                                        datatype: 'json',
                                        data: '{makh: ' + JSON.stringify($("#donviedit").attr("data-makh"))
                                            + ', dt: ' + JSON.stringify($("#dienthoaiedit").val().replace(/_/g, ""))
                                            + ', xeploai: ' + JSON.stringify($("#xeploaiedit").val())
                                            + ', matinh: ' + JSON.stringify($("#tinhedit").val())
                                            + ', quanhuyen: ' + JSON.stringify($("#quanedit").val())
                                            + ', lienhe: ' + JSON.stringify($("#lienheedit").val())
                                            + ', diachi: ' + JSON.stringify($("#diachiedit").val())
                                            + ', tenkh: ' + JSON.stringify($("#tenedit").val())
                                            + ', macn: ' + JSON.stringify($("#CNedit").val())
                                            + ', masothue: ' + JSON.stringify($("#thueedit").val()) + '}',
                                        error: function () {
                                            toastr.options = {
                                                "closeButton": true,
                                                "debug": false,
                                                "newestOnTop": true,
                                                "progressBar": true,
                                                "positionClass": "toast-top-right",
                                                "preventDuplicates": false,
                                                "onclick": null,
                                                "showDuration": "300",
                                                "hideDuration": "1000",
                                                "timeOut": "5000",
                                                "extendedTimeOut": "1000",
                                                "showEasing": "swing",
                                                "hideEasing": "linear",
                                                "showMethod": "fadeIn",
                                                "hideMethod": "fadeOut"
                                            }
                                            Command: toastr["warning"]("Vui lòng thử lại", "Lỗi")
                                        },
                                        success: function (data) {
                                            toastr.options = {
                                                "closeButton": true,
                                                "debug": false,
                                                "newestOnTop": true,
                                                "progressBar": true,
                                                "positionClass": "toast-top-right",
                                                "preventDuplicates": false,
                                                "onclick": null,
                                                "showDuration": "300",
                                                "hideDuration": "1000",
                                                "timeOut": "5000",
                                                "extendedTimeOut": "1000",
                                                "showEasing": "swing",
                                                "hideEasing": "linear",
                                                "showMethod": "fadeIn",
                                                "hideMethod": "fadeOut"
                                            }
                                            Command: toastr["success"]("Thay đổi thành công !", "THÔNG BÁO")
                                            $('#ModalEdit').modal('hide')
                                            location.reload();
                                        },
                                        timeout: 5000,
                                    });
                                }
                            },
                            cancel: {
                                text: 'Hủy',
                                btnClass: 'btn-danger',
                                keys: ['esc'],
                                action: function () {

                                }
                            }
                        }
                    });
                }
            });

            $(document).on("click", ".saveKH", function () {
                $('#loading').modal({ backdrop: 'static', keyboard: false });
                if (!$("#KH2").val() || !$("#KH3").val() || !$("#KHCN").val()) {
                    toastr.options = {
                        "closeButton": false,
                        "debug": false,
                        "newestOnTop": true,
                        "progressBar": true,
                        "positionClass": "toast-top-right",
                        "preventDuplicates": false,
                        "onclick": null,
                        "showDuration": "300",
                        "hideDuration": "1000",
                        "timeOut": "5000",
                        "extendedTimeOut": "1000",
                        "showEasing": "swing",
                        "hideEasing": "linear",
                        "showMethod": "fadeIn",
                        "hideMethod": "fadeOut"
                    }
                    Command: toastr["warning"]("Bạn chưa điền đủ thông tin khách hàng!", "Thông báo")
                } else {
                    $.ajax({
                        type: "POST",
                        url: "@Url.Action("SaveKH", "Baocao")",
                        datatype: 'json',
                        contentType: "application/json",
                        data: '{tenkh: ' + JSON.stringify($("#KH2").val()) + ', diachi: ' + JSON.stringify($("#KH3").val()) + ', nguoilienhe: ' + JSON.stringify($("#KH4").val()) + ', dienthoai: ' + JSON.stringify($("#KH5").val()) + ', xeploai: ' + JSON.stringify($("#KH6").val()) + ', matinh: ' + JSON.stringify($("#KH7").val()) + ', maquan: ' + JSON.stringify($("#KHquan").val()) + ', masothue: ' + JSON.stringify($("#KHthue").val()) + ', macn: ' + JSON.stringify($("#KHCN").val()) + '}',
                        error: function () {
                            $('#loading').modal('hide')
                            toastr.options = {
                                "closeButton": true,
                                "debug": false,
                                "newestOnTop": true,
                                "progressBar": true,
                                "positionClass": "toast-top-right",
                                "preventDuplicates": false,
                                "onclick": null,
                                "showDuration": "300",
                                "hideDuration": "1000",
                                "timeOut": "5000",
                                "extendedTimeOut": "1000",
                                "showEasing": "swing",
                                "hideEasing": "linear",
                                "showMethod": "fadeIn",
                                "hideMethod": "fadeOut"
                            }
                            Command: toastr["warning"]("Vui lòng thử lại", "Lỗi")
                        },
                        success: function (data) {
                            $('#loading').modal('hide');
                            $('#ModalTao').modal('hide');
                            location.reload();
                        },
                        timeout: 5000,
                    });
                }
            });
            $(document).on("click", ".changeMAKH", function () {
                $('#loading').modal({ backdrop: 'static', keyboard: false });
                if (!$("#fromKH").val() || !$("#toKH").val()) {
                    toastr.options = {
                        "closeButton": false,
                        "debug": false,
                        "newestOnTop": true,
                        "progressBar": true,
                        "positionClass": "toast-top-right",
                        "preventDuplicates": false,
                        "onclick": null,
                        "showDuration": "300",
                        "hideDuration": "1000",
                        "timeOut": "5000",
                        "extendedTimeOut": "1000",
                        "showEasing": "swing",
                        "hideEasing": "linear",
                        "showMethod": "fadeIn",
                        "hideMethod": "fadeOut"
                    }
                    Command: toastr["warning"]("Bạn chưa điền đủ thông tin!", "Thông báo")
                } else {
                    $.ajax({
                        type: "POST",
                        url: "@Url.Action("changeMAKH", "Baocao")",
                        datatype: 'json',
                        contentType: "application/json",
                        data: '{fromKH: ' + JSON.stringify($("#fromKH").val()) + ', toKH: ' + JSON.stringify($("#toKH").val()) + '}',
                        error: function () {
                            $('#loading').modal('hide')
                            toastr.options = {
                                "closeButton": true,
                                "debug": false,
                                "newestOnTop": true,
                                "progressBar": true,
                                "positionClass": "toast-top-right",
                                "preventDuplicates": false,
                                "onclick": null,
                                "showDuration": "300",
                                "hideDuration": "1000",
                                "timeOut": "5000",
                                "extendedTimeOut": "1000",
                                "showEasing": "swing",
                                "hideEasing": "linear",
                                "showMethod": "fadeIn",
                                "hideMethod": "fadeOut"
                            }
                            Command: toastr["warning"]("Vui lòng thử lại", "Lỗi")
                        },
                        success: function (data) {
                            $('#loading').modal('hide');
                            $('#ModalChange').modal('hide');
                            location.reload();
                        },
                        timeout: 5000,
                    });
                }
            });
            $(document).on("click", ".btntao", function () {

            });
            $(document).on("click", ".btndoikh", function () {
                var tr = $(this).closest("tr");
                var id = tr.data("id");
                $("#fromKH").val(id);
            });
            $(document).on("click", ".btnxoakh", function () {
                var tr = $(this).closest("tr");
                var id = tr.data("id");
