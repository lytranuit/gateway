                                 + '<td data-makh="' + data[i].makh + '" data-tenkh="' + data[i].tenkh + '" class="left strong text-dark font-weight-normal">' + data[i].makh + " - " + data[i].tenkh + '</td>'
                                 + '<td class="text-center"><input class="largerCheckbox align-middle" type="checkbox"' + check + '>' 
                                 + ((data[i].checkgps == 1)?'<button type="button" class="btn btngps btn-success" disabled=""><i class="fa p-1 fa-check"></i></button>':'<button type="button" class="btn btn-primary btngps"><i class="fa fa-map-marker p-1"></i></button>') +'</td>'
                                     //+ '<td class="text-center text-dark"><button type="button" class="btn btn-primary btnluu"><i class="fa fa-check-circle"></i></button></td>'
                                 + '<td class="text-center text-dark"><button type="button" class="btn btn-danger btndelete"><i class="fa fa-times"></i></button></td>'
                                 + '</tr><tr><td colspan="3"><input type="text" class="form-control' + hidden + '" placeholder="Điền lí do"><div class="input-group"><select class="custom-select' + block + '"><option selected value="1">Ghé thăm</option><option value="2">Có toa hàng</option></select><div class="input-group-append"><button type="button" title="Thêm đơn hàng" class="btn btn-outline-primary waves-effect m-0 btnadddonhang'+ block +'"><i class="fa fa-plus"></i></button></div></div></td></tr>');
                                  $("#tabletdv > tbody > tr").last().find("input[type=text]").val(data[i].ghichu);
                                  if (data[i].ketqua != null) {
                                      $("#tabletdv > tbody > tr").last().find("select").val(data[i].ketqua);
                                      if(data[i].ketqua == 1)
                                      {
                                          $("#tabletdv > tbody > tr").last().find("button.btnadddonhang").addClass("hidden");
                                      }
                                  }
                              }
                          });
                                $('#ModalView').modal({ backdrop: 'static', keyboard: false })
                            }
                            else if (x > start && x < moment(datelock).startOf('isoweek')) {
                                $("#btnluutatca").css("display","block");
                                $("#thxoa").css("display","none");
                                $(".themkhachhang").css("display","none");
                                $("#ngay").text(ngay);
                                $("#tabletdv > tbody").empty();
                                $.post(url, { ngay: ngay },
                          function (data) {
                              for (var i = 0; i < data.length; i++) {
                                  var check = (data[i].checkin == true) ? " checked" : "";
                                  var hidden = (data[i].checkin == true) ? " hidden" : "";
                                  var block = (data[i].checkin == false) ? " hidden" : "";
                                  $("#tabletdv").find("tbody").append(
                                   '<tr class="stt">'// need to change closing tag to an opening `<tr>` tag.
                                 + '<td rowspan="2" class="text-center text-dark">' + (i + 1) + '</td>'
                                 + '<td data-makh="' + data[i].makh + '" data-tenkh="' + data[i].tenkh + '" class="left strong text-dark font-weight-normal">'+ data[i].makh + " - " + data[i].tenkh + '</td>'
                                 + '<td class="text-center"><input class="largerCheckbox align-middle" type="checkbox"' + check + '>' + ((data[i].checkgps == 1)?'<button  disabled type="button" class="btn btngps btn-success" disabled=""><i class="fa p-1 fa-check"></i></button>':'<button  disabled type="button" class="btn btn-primary btngps"><i class="fa fa-map-marker p-1"></i></button>') +'</td>'
